{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "SaaS Cohort Retention & Churn Sankey (Data-Driven Architecture)",
    "width": 1050,
    "height": 480,
    "padding": {
      "left": 110,
      "right": 140,
      "top": 55,
      "bottom": 50
    },
    "background": "white",
    "_metadata": {
      "chart_type": "sankey_multi_stage",
      "title": "Sankey SaaS 12-Month Cohort Retention",
      "topic": "saas_retention_churn",
      "architecture": "data-driven layout via Vega transform pipeline",
      "value_unit": "User count",
      "notes": "1,850 signups tracked 12 months — Referral yields 60% high-engagement; only 28% survive to Year-1 renewal"
    },
    "signals": [
      {
        "name": "nodeWidth",
        "value": 15
      },
      {
        "name": "nodeGap",
        "value": 200
      },
      {
        "name": "threshold",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100,
          "step": 10,
          "name": "Min Flow (users): "
        }
      },
      {
        "name": "nodeHover",
        "value": null,
        "on": [
          {
            "events": "@nodeRect:mouseover",
            "update": "datum.name"
          },
          {
            "events": "@nodeRect:mouseout",
            "update": "null"
          }
        ]
      },
      {
        "name": "edgeHover",
        "value": null,
        "on": [
          {
            "events": "@edgeMark:mouseover",
            "update": "datum.linkId"
          },
          {
            "events": "@edgeMark:mouseout",
            "update": "null"
          }
        ]
      },
      {
        "name": "selectedNode",
        "value": null,
        "on": [
          {
            "events": "@nodeRect:click!",
            "update": "selectedNode === datum.name ? null : datum.name"
          },
          {
            "events": [
              {
                "type": "click",
                "markname": "resetBtn"
              },
              {
                "type": "dblclick"
              }
            ],
            "update": "null"
          }
        ]
      }
    ],
